<Window
	x:Class="RemoteLogViewer.Views.Settings.SettingsWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:settings="using:RemoteLogViewer.ViewModels.Settings" xmlns:controls="using:CommunityToolkit.WinUI.Controls"
	mc:Ignorable="d"
	Title="Settings">
	<Grid ColumnDefinitions="220,*" RowDefinitions="*,Auto"  ColumnSpacing="8">
		<StackPanel Grid.Column="0" Padding="12" Spacing="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
			<TextBlock Text="Categories" FontWeight="SemiBold"/>
			<ListView x:Name="CategoryList" ItemsSource="{x:Bind ViewModel.Pages}" SelectedItem="{x:Bind ViewModel.SelectedSettingsPage.Value, Mode=TwoWay}">
				<ListView.ItemTemplate>
					<DataTemplate x:DataType="settings:ISettingsPageViewModel">
						<TextBlock Text="{Binding PageName}"/>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</StackPanel>
		<Frame x:Name="ContentFrame" Grid.Column="1"/>
		<controls:DockPanel Grid.Row="1" Grid.ColumnSpan="2">
			<Button controls:DockPanel.Dock="Right" Content="OK" Command="{x:Bind ViewModel.SaveCommand}"/>
			<Grid/>
		</controls:DockPanel>
	</Grid>
</Window>
