<Page
 x:Class="RemoteLogViewer.Views.Settings.HighlightSettingsPage"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 mc:Ignorable="d">
 <Grid Padding="16" RowSpacing="12" ColumnSpacing="16">
 <Grid.ColumnDefinitions>
 <ColumnDefinition Width="260" />
 <ColumnDefinition Width="*" />
 </Grid.ColumnDefinitions>
 <Grid.RowDefinitions>
 <RowDefinition Height="*" />
 <RowDefinition Height="Auto" />
 </Grid.RowDefinitions>
 <StackPanel Grid.Column="0" Grid.Row="0" Spacing="8">
 <TextBlock Text="Highlight Settings" FontWeight="SemiBold" FontSize="14" />
 <StackPanel Orientation="Horizontal" Spacing="4">
 <Button x:Name="AddSettingButton" Content="Add Setting" />
 <Button x:Name="RemoveSettingButton" Content="Remove" />
 </StackPanel>
 <ListView x:Name="SettingsListView" SelectionMode="Single" MinHeight="300">
 <ListView.ItemTemplate>
 <DataTemplate>
 <TextBlock Text="{Binding Name}" />
 </DataTemplate>
 </ListView.ItemTemplate>
 </ListView>
 </StackPanel>
 <Grid Grid.Column="1" Grid.Row="0" RowSpacing="12">
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto" />
 <RowDefinition Height="*" />
 </Grid.RowDefinitions>
 <StackPanel Orientation="Horizontal" Spacing="8" Grid.Row="0">
 <TextBlock Text="Setting Name" VerticalAlignment="Center" />
 <TextBox x:Name="SettingNameTextBox" Width="240" />
 </StackPanel>
 <StackPanel Grid.Row="1" Spacing="8">
 <TextBlock Text="Highlight Conditions" FontWeight="SemiBold" />
 <Button x:Name="AddConditionButton" Content="Add Condition" Width="140" />
 <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollMode="Disabled" MaxHeight="400">
 <ItemsControl x:Name="ConditionsItemsControl">
 <ItemsControl.ItemTemplate>
 <DataTemplate>
 <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="8" Margin="0,0,0,8">
 <StackPanel Spacing="6">
 <StackPanel Orientation="Horizontal" Spacing="8">
 <TextBlock Text="Pattern" Width="60" VerticalAlignment="Center" />
 <TextBox Width="240" Text="{Binding Pattern}" />
 </StackPanel>
 <StackPanel Orientation="Horizontal" Spacing="8">
 <TextBlock Text="Type" Width="60" VerticalAlignment="Center" />
 <ComboBox Width="160" SelectedItem="{Binding PatternType}">
 <ComboBoxItem Content="Regex" />
 <ComboBoxItem Content="Exact" />
 </ComboBox>
 <CheckBox Content="Ignore Case" IsChecked="{Binding IgnoreCase}" />
 <CheckBox Content="Only Match" IsChecked="{Binding HighlightOnlyMatch}" />
 </StackPanel>
 <StackPanel Orientation="Horizontal" Spacing="8">
 <TextBlock Text="Fore" Width="60" VerticalAlignment="Center" />
 <ColorPicker Width="160" Color="{Binding ForeColor}" IsAlphaEnabled="False" />
 <TextBlock Text="Back" Width="60" VerticalAlignment="Center" />
 <ColorPicker Width="160" Color="{Binding BackColor}" IsAlphaEnabled="True" />
 </StackPanel>
 <Button Content="Remove Condition" HorizontalAlignment="Left" />
 </StackPanel>
 </Border>
 </DataTemplate>
 </ItemsControl.ItemTemplate>
 </ItemsControl>
 </ScrollViewer>
 </StackPanel>
 </Grid>
 <StackPanel Grid.ColumnSpan="2" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
 <Button x:Name="OkButton" Content="OK" Width="100" />
 <Button x:Name="CancelButton" Content="Cancel" Width="100" />
 </StackPanel>
 </Grid>
</Page>