<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="RemoteLogViewer.Views.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:vm="using:RemoteLogViewer.ViewModels"
	xmlns:model="using:RemoteLogViewer.Models.Ssh"
	xmlns:views="using:RemoteLogViewer.Views"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Title="RemoteLogViewer">

	<Window.SystemBackdrop>
		<MicaBackdrop />
	</Window.SystemBackdrop>

	<Grid Padding="12" RowSpacing="8" RowDefinitions="Auto,*">
		<StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
			<Button Content="New Log Tab" Command="{x:Bind ViewModel.AddTabCommand}" />
		</StackPanel>

		<TabView Grid.Row="1" TabItemsSource="{x:Bind ViewModel.Tabs, Mode=OneWay}" SelectedItem="{x:Bind ViewModel.SelectedTab.Value, Mode=TwoWay}" IsAddTabButtonVisible="False">
			<TabView.TabItemTemplate>
				<DataTemplate x:DataType="vm:LogViewerViewModel">
					<TabViewItem Header="{x:Bind Title}">
						<views:LogViewerControl ViewModel="{x:Bind }"  Grid.Column="1" />
					</TabViewItem>
				</DataTemplate>
			</TabView.TabItemTemplate>
		</TabView>
	</Grid>
</Window>
