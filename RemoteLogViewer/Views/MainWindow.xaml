<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="RemoteLogViewer.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:RemoteLogViewer.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="RemoteLogViewer">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <StackPanel Spacing="8" Padding="12">
        <Button Content="Add" Command="{x:Bind ViewModel.AddTabCommand}" />
        <TabView TabItemsSource="{x:Bind ViewModel.Tabs, Mode=OneWay}" IsAddTabButtonVisible="False" CanDragTabs="False" Height="400">
            <TabView.TabItemTemplate>
                <DataTemplate x:DataType="vm:LogViewerViewModel">
                    <TabViewItem Header="{x:Bind Title}">
                        <TextBlock Text="{x:Bind Title}" />
                    </TabViewItem>
                </DataTemplate>
            </TabView.TabItemTemplate>
        </TabView>
    </StackPanel>
</Window>
